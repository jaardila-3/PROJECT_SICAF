@model EvaluationOverviewDto
@{
    string active = UserConstants.StudentStatus.Active;
}

<div class="row mb-2">
    <div class="col-12">
        <div class="accordion" id="accordionCompletedMissions">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingCompletedMissions">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                        data-bs-target="#collapseCompletedMissions" aria-expanded="false"
                        aria-controls="collapseCompletedMissions">
                        <i class="ti ti-check-circle me-2 text-success"></i>
                        Misiones Completadas (@Model.CompletedMissions.Count())
                    </button>
                </h2>
                <div id="collapseCompletedMissions" class="accordion-collapse collapse"
                    aria-labelledby="headingCompletedMissions" data-bs-parent="#accordionCompletedMissions">
                    <div class="accordion-body">
                        <div class="row">
                            @foreach (var mission in Model.CompletedMissions.OrderBy(m => m.MissionNumber))
                            {
                                <div class="col-md-4 col-sm-6 mb-3">
                                    <div class="mission-card completed p-3 hover-shadow position-relative">

                                        <a asp-action="MissionEvaluationDetail" asp-controller="Student" asp-area="Student"
                                            asp-route-missionId="@mission.MissionId" asp-route-studentId="@Model.StudentId"
                                            asp-route-courseId="@Model.CourseId" asp-route-returnUrl="instructor"
                                            class="text-decoration-none">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div>
                                                    <h6 class="mb-1">@mission.MissionName</h6>
                                                    <p class="mb-1 small text-muted">Instructor:</p>
                                                    <p class="mb-1 small text-muted">@mission.GradeNameInstructor</p>
                                                    <p class="mb-1 small text-muted">
                                                        @mission.CompletionDate.ToString("dd/MM/yyyy")
                                                    </p>

                                                </div>
                                                <div class="text-end">
                                                    @if (mission.MissionPassed)
                                                    {
                                                        <span class="badge bg-success">Satisfactoria</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Insatisfactoria</span>
                                                        @if (mission.CriticalFailures > 0)
                                                        {
                                                            <br>

                                                            <span class="badge bg-danger mt-1">@mission.CriticalFailures
                                                                N-Rojas</span>
                                                        }
                                                    }
                                                </div>
                                            </div>
                                        </a>

                                        <!-- Botón de Editar (solo visible si CanEdit es true y si el funcionario esta activo) -->
                                        @if (mission.CanEdit && Model.Status == active)
                                        {
                                            <div class="mt-3 pt-2 border-top">
                                                <a asp-action="EditMissionGrades" asp-controller="Evaluation"
                                                    asp-area="Instructor" asp-route-missionId="@mission.MissionId"
                                                    asp-route-studentId="@Model.StudentId" asp-route-courseId="@Model.CourseId"
                                                    class="btn btn-sm btn-warning w-100">
                                                    <i class="ti ti-edit me-1"></i>
                                                    Editar Notas
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        @if (Model.NonEvaluableMissions.Any())
                        {
                            <hr>
                            <div class="row">
                                <h5 class="text-center my-3">Misiones No Evaluables</h5>
                                @foreach (var mission in Model.NonEvaluableMissions.OrderBy(m => m.MissionNumber))
                                {
                                    <div class="col-md-4 col-sm-6 mb-3">
                                        <div class="mission-card completed p-3 hover-shadow position-relative">

                                            <a asp-action="MissionEvaluationDetail" asp-controller="Student" asp-area="Student"
                                                asp-route-missionId="@mission.MissionId" asp-route-studentId="@Model.StudentId"
                                                asp-route-courseId="@Model.CourseId"
                                                asp-route-viewType="@AviationConstants.NonEvaluableMission"
                                                class="text-decoration-none">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <div>
                                                        <h6 class="mb-1">Misión No Evaluable @mission.MissionNumber</h6>
                                                        <p class="mb-1 small text-muted">@mission.DisplayName</p>
                                                        <p class="mb-0 small">
                                                            <i class="ti ti-clock-hour-3 me-1"></i>
                                                            @mission.ManFlightHours.ToString("F1") hrs
                                                        </p>
                                                    </div>
                                                </div>
                                            </a>

                                            <!-- Botón de Editar (solo visible si CanEdit es true y si el funcionario esta activo) -->
                                            @if (mission.CanEdit && Model.Status == active)
                                            {
                                                <div class="mt-3 pt-2 border-top">
                                                    <a asp-action="EditMissionGrades" asp-controller="Evaluation"
                                                        asp-area="Instructor" asp-route-missionId="@mission.MissionId"
                                                        asp-route-studentId="@Model.StudentId" asp-route-courseId="@Model.CourseId"
                                                        asp-route-viewType="@AviationConstants.NonEvaluableMission"
                                                        class="btn btn-sm btn-warning w-100">
                                                        <i class="ti ti-edit me-1"></i>
                                                        Editar Notas
                                                    </a>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>