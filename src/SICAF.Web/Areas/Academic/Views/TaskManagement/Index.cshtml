@model List<PhaseBasicDto>
@using SICAF.Common.DTOs.Academic

@{
    ViewData["Title"] = "Gestión de Tareas";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb rounded">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home", new { area = "" })" class="text-success d-flex align-items-center">
                <i class="ti ti-home fs-4 mt-1"></i>
            </a>
        </li>
        <li class="breadcrumb-item text-success active" aria-current="page">Tareas</li>
    </ol>
</nav>

<div class="">
    <div class="row mb-3">
        <div class="col-md-12 col-sm-12">
            <h4 class="page-title text-truncate font-weight-medium mb-1">@ViewData["Title"]</h4>
            <p class="text-muted">Gestión de tareas académicas por fase. Seleccione una fase para editar tareas, asignar orden y configurar tareas P3.</p>
        </div>
    </div>
</div>

<div class="">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Seleccione una Fase</h4>
                    <h6 class="card-subtitle mb-4">Fases del programa de aviación</h6>

                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            <i class="ti ti-info-circle me-2"></i>
                            No se encontraron fases configuradas.
                        </div>
                    }
                    else
                    {
                        <!-- Agrupar por tipo de ala -->
                        var rotaryPhases = Model.Where(p => p.WingType == AviationConstants.WingTypes.ROTARY_WING).ToList();
                        var fixedPhases = Model.Where(p => p.WingType == AviationConstants.WingTypes.FIXED_WING).ToList();

                        @if (rotaryPhases.Any())
                        {
                            <h5 class="mt-3 mb-3">
                                <i class="ti ti-helicopter me-2"></i>
                                Ala Rotatoria
                            </h5>
                            <div class="row">
                                @foreach (var phase in rotaryPhases.OrderBy(p => p.PhaseNumber))
                                {
                                    <div class="col-md-6 col-lg-4 col-xl-3 mb-3">
                                        <div class="card border border-success h-100">
                                            <div class="card-body">
                                                <div class="d-flex align-items-center mb-3">
                                                    <span class="badge bg-success fs-5 me-2">Fase @phase.PhaseNumber</span>
                                                </div>
                                                <h5 class="card-title">@phase.PhaseName</h5>
                                                <div class="card-text text-muted small">
                                                    <div class="d-flex align-items-center mb-1">
                                                        <i class="ti ti-target me-1"></i>
                                                        <span>@phase.TotalMissions misiones</span>
                                                    </div>
                                                    <div class="d-flex align-items-center">
                                                        <i class="ti ti-list me-1"></i>
                                                        <span>@phase.TotalTasks tareas</span>
                                                    </div>
                                                </div>
                                                <div class="mt-3">
                                                    <a asp-action="ManageTasks" asp-route-phaseId="@phase.PhaseId"
                                                       class="btn btn-success w-100">
                                                        <i class="ti ti-edit me-1"></i>
                                                        Gestionar Tareas
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }

                        @if (fixedPhases.Any())
                        {
                            <h5 class="mt-4 mb-3">
                                <i class="ti ti-plane me-2"></i>
                                Ala Fija
                            </h5>
                            <div class="row">
                                @foreach (var phase in fixedPhases.OrderBy(p => p.PhaseNumber))
                                {
                                    <div class="col-md-6 col-lg-4 col-xl-3 mb-3">
                                        <div class="card border border-primary h-100">
                                            <div class="card-body">
                                                <div class="d-flex align-items-center mb-3">
                                                    <span class="badge bg-primary fs-5 me-2">Fase @phase.PhaseNumber</span>
                                                </div>
                                                <h5 class="card-title">@phase.PhaseName</h5>
                                                <div class="card-text text-muted small">
                                                    <div class="d-flex align-items-center mb-1">
                                                        <i class="ti ti-target me-1"></i>
                                                        <span>@phase.TotalMissions misiones</span>
                                                    </div>
                                                    <div class="d-flex align-items-center">
                                                        <i class="ti ti-list me-1"></i>
                                                        <span>@phase.TotalTasks tareas</span>
                                                    </div>
                                                </div>
                                                <div class="mt-3">
                                                    <a asp-action="ManageTasks" asp-route-phaseId="@phase.PhaseId"
                                                       class="btn btn-primary w-100">
                                                        <i class="ti ti-edit me-1"></i>
                                                        Gestionar Tareas
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
