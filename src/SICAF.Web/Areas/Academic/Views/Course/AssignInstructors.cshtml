@model AssignInstructorsDto
@{
    ViewData["Title"] = "Asignar Instructores";
    var course = ViewBag.Course as CourseDto;
    var hasLeaderFixedWing = ViewBag.HasLeaderFixedWing ?? false;
    var hasLeaderRotaryWing = ViewBag.HasLeaderRotaryWing ?? false;
    var instructors = ViewBag.AvailableInstructors as List<UserDto>;
}

@section Styles {
    <style>
        .hover-shadow {
            transition: box-shadow 0.3s ease;
        }

        .hover-shadow:hover {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-check-input:checked+.form-check-label {
            background-color: rgba(13, 110, 253, 0.1);
            border-radius: 0.375rem;
        }
    </style>
}

@section Scripts {
    <script src="~/js/Areas/Academic/Course/assign-instructors.js"></script>
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary">
            <h5 class="mb-0 text-white">
                <i class="ti ti-user-plus me-2"></i>
                Asignar Instructores al programa: @course?.CourseName
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="AssignInstructors" method="post" id="formAssignInstructors">
                @Html.HiddenFor(m => m.CourseId)

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Tipo de Ala (Opcional)</label>
                            <select asp-items="ViewBag.WingTypes" class="form-select">
                                <option value="">Todos los tipos</option>
                            </select>
                            <small class="form-text text-muted">
                                Filtra instructores por tipo de ala específico
                            </small>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">Estado de Selección</label>
                            <div class="d-flex gap-2 align-items-center">
                                <span id="selectionCounter" class="badge bg-secondary">0 seleccionados</span>
                                <span id="visibleCounter" class="text-muted small">@(instructors?.Count ?? 0)
                                    instructor@(instructors?.Count != 1 ? "es" : "") disponible@(instructors?.Count != 1
                                                                        ? "s" : "")</span>
                            </div>
                        </div>
                    </div>
                </div>

                @if (instructors?.Any() == true)
                {
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <label class="form-label mb-0">Seleccionar Instructores</label>
                            <div class="btn-group btn-group-sm">
                                <button type="button" class="btn btn-outline-primary" id="selectAllInstructors">
                                    <i class="ti ti-check-all me-1"></i>Seleccionar Todos
                                </button>
                                <button type="button" class="btn btn-outline-secondary" id="deselectAllInstructors">
                                    <i class="ti ti-x me-1"></i>Limpiar Selección
                                </button>
                            </div>
                        </div>

                        @if (hasLeaderFixedWing || hasLeaderRotaryWing)
                        {
                            <div class="alert alert-success mb-2">
                                <i class="ti ti-info-circle me-2"></i>
                                Ya existe un líder de vuelo asignado a este programa para el tipo de ala
                                @if (hasLeaderFixedWing && hasLeaderRotaryWing)
                                {
                                    <span class="fw-bold">@AviationConstants.WingTypes.FIXED_WING y
                                        @AviationConstants.WingTypes.ROTARY_WING</span>
                                }
                                else if (hasLeaderFixedWing)
                                {
                                    <span class="fw-bold">@AviationConstants.WingTypes.FIXED_WING</span>
                                }
                                else
                                {
                                    <span class="fw-bold">@AviationConstants.WingTypes.ROTARY_WING</span>
                                }
                            </div>
                        }

                        <div class="border rounded p-3" style="max-height: 500px; overflow-y: auto;">
                            @foreach (var instructor in instructors)
                            {
                                var roleText = string.Join(", ", instructor.Roles.Select(r => r.Name));
                                var wingType = instructor.AviationProfile?.WingType ?? "N/A";
                                var isFixedWing = wingType == AviationConstants.WingTypes.FIXED_WING;
                                var isRotaryWing = wingType == AviationConstants.WingTypes.ROTARY_WING;

                                <div class="form-check mb-3 p-3 border rounded hover-shadow instructor-item"
                                    data-wing-type="@wingType">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="d-flex align-items-start flex-grow-1">
                                            <!-- Checkbox para selección -->
                                            <input type="checkbox" class="form-check-input me-3" name="InstructorIds"
                                                value="@instructor.Id" id="instructor_@instructor.Id">

                                            <!-- Información del instructor -->
                                            <label class="form-check-label flex-grow-1" for="instructor_@instructor.Id">
                                                <div class="instructorName fw-bold text-primary">
                                                    @instructor.Name @instructor.LastName
                                                </div>
                                                <div class="text-muted small mb-2">
                                                    <i class="ti ti-id me-1"></i>@instructor.IdentificationNumber
                                                    @if (!string.IsNullOrEmpty(instructor.Grade))
                                                    {
                                                        <span class="ms-2">
                                                            <i class="ti ti-medal me-1"></i>@instructor.Grade
                                                        </span>
                                                    }
                                                </div>
                                                <div class="text-muted small mb-2">
                                                    <i class="ti ti-users me-1"></i>@roleText
                                                </div>
                                                <div class="d-flex gap-2 align-items-center">
                                                    @if (wingType != "N/A")
                                                    {
                                                        @if (isFixedWing)
                                                        {
                                                            <span class="badge bg-primary claseWingType">
                                                                <i class="ti ti-plane me-1"></i>@wingType
                                                            </span>
                                                        }
                                                        else if (isRotaryWing)
                                                        {
                                                            <span class="badge bg-info claseWingType">
                                                                <i class="ti ti-propeller me-1"></i>@wingType
                                                            </span>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary claseWingType">N/A</span>
                                                    }
                                                </div>
                                            </label>
                                        </div>

                                        <!-- Radio buttons para líder agrupados por tipo de ala -->
                                        <div class="d-flex flex-column gap-2 ms-3">
                                            @if (isFixedWing && !(hasLeaderFixedWing))
                                            {
                                                <div class="form-check form-check-inline">
                                                    <input type="radio" class="form-check-input claseLeaderRadio"
                                                        name="FlightLeaderFixedWingId" value="@instructor.Id"
                                                        id="leaderFixed_@instructor.Id">
                                                    <label class="form-check-label text-primary fw-bold"
                                                        for="leaderFixed_@instructor.Id">
                                                        <i class="ti ti-crown me-1"></i>Líder Ala Fija
                                                    </label>
                                                </div>
                                            }
                                            @if (isRotaryWing && !(hasLeaderRotaryWing))
                                            {
                                                <div class="form-check form-check-inline">
                                                    <input type="radio" class="form-check-input claseLeaderRadio"
                                                        name="FlightLeaderRotaryWingId" value="@instructor.Id"
                                                        id="leaderRotary_@instructor.Id">
                                                    <label class="form-check-label text-info fw-bold"
                                                        for="leaderRotary_@instructor.Id">
                                                        <i class="ti ti-crown me-1"></i>Líder Ala Rotatoria
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="InstructorIds" class="text-danger"></span>
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="ti ti-alert-triangle me-2"></i>
                        No hay instructores disponibles
                    </div>
                }

                <div class="d-flex justify-content-between align-items-center">
                    <a asp-action="Details" asp-route-id="@Model.CourseId" class="btn btn-secondary">
                        <i class="ti ti-arrow-left me-1"></i>Volver al programa
                    </a>

                    @if (instructors?.Any() == true)
                    {
                        <button type="submit" class="btn btn-primary">
                            <i class="ti ti-check me-1"></i>Asignar Instructores
                        </button>
                    }
                </div>
            </form>
        </div>
    </div>
</div>