@model RoleDto

@{
    ViewData["Title"] = "Detalles del Rol";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb rounded">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home", new { area = "" })" class="text-success d-flex align-items-center">
                <i class="ti ti-home fs-4 mt-1"></i>
            </a>
        </li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Role")" class="text-success">Roles</a></li>
        <li class="breadcrumb-item text-success active" aria-current="page">Detalles</li>
    </ol>
</nav>

<div class="">
    <div class="row">
        <!-- Tarjeta de Información del Rol -->
        <div class="col-lg-4 col-xlg-3 col-md-5">
            <div class="card">
                <div class="card-body">
                    <center class="mt-4">
                        <div class="rounded-circle bg-success d-flex align-items-center justify-content-center mx-auto"
                            style="width: 100px; height: 100px;">
                            <i class="ti ti-shield fs-1 text-white"></i>
                        </div>
                        <h4 class="card-title mt-3">@Model.Name</h4>

                        <div class="mt-3">
                            @if (Model.IsSystemRole)
                            {
                                <span class="badge bg-info text-dark">
                                    <i class="ti ti-shield-lock me-1"></i>Rol del Sistema
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-white">
                                    <i class="ti ti-user me-1"></i>Rol Personalizado
                                </span>
                            }
                        </div>

                        <div class="row text-center justify-content-center mt-4">
                            <div class="col-12">
                                <span class="font-medium d-block">Usuarios Asignados</span>
                                <h3 class="text-success">@(Model.Users?.Count ?? 0)</h3>
                            </div>
                        </div>
                    </center>
                </div>
                <div>
                    <hr class="my-0">
                </div>
                <div class="card-body">
                    <small class="text-muted">Descripción del Rol</small>
                    <h6 class="mt-2">
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            @Model.Description
                        }
                        else
                        {
                            <span class="text-muted fst-italic">Sin descripción disponible</span>
                        }
                    </h6>
                </div>
            </div>
        </div>

        <!-- Información Detallada -->
        <div class="col-lg-8 col-xlg-9 col-md-7">
            <!-- Usuarios con este Rol -->
            <div class="card">
                <div class="card-header bg-success">
                    <h5 class="mb-0 text-white text-center">
                        <i class="ti ti-users me-2"></i>
                        Usuarios Asignados
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Users != null && Model.Users.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Documento</th>
                                        <th>Nombre Completo</th>
                                        <th>Usuario</th>
                                        <th>Fuerza</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Users.OrderBy(u => u.FullName))
                                    {
                                        <tr>
                                            <td>@user.FullIdentification</td>
                                            <td>
                                                <a href="@Url.Action("Details", "User", new { area = "Identity", id = user.Id })"
                                                    class="text-success text-decoration-none">
                                                    @user.FullName
                                                </a>
                                            </td>
                                            <td>@user.Username</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(user.Force))
                                                {
                                                    <span class="badge bg-dark">@user.Force</span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!user.IsLockedOut)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Bloqueado</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Estadísticas adicionales -->
                        <div class="row mt-4">
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="ti ti-chart-pie me-2"></i>Distribución por Fuerza
                                        </h6>
                                        @{
                                            var forceGroups = Model.Users
                                            .Where(u => !string.IsNullOrEmpty(u.Force))
                                            .GroupBy(u => u.Force)
                                            .Select(g => new { Force = g.Key, Count = g.Count() })
                                            .OrderByDescending(g => g.Count);
                                        }
                                        @if (forceGroups.Any())
                                        {
                                            <ul class="list-unstyled mb-0">
                                                @foreach (var group in forceGroups)
                                                {
                                                    <li class="mb-1">
                                                        <span class="badge bg-dark">@group.Force</span>
                                                        <span class="ms-2">@group.Count usuario(s)</span>
                                                    </li>
                                                }
                                            </ul>
                                        }
                                        else
                                        {
                                            <p class="text-muted mb-0">No hay datos disponibles</p>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title">
                                            <i class="ti ti-users me-2"></i>Estado de Usuarios
                                        </h6>
                                        @{
                                            var activeCount = Model.Users.Count(u => !u.IsLockedOut);
                                            var lockedCount = Model.Users.Count(u => u.IsLockedOut);
                                        }
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Activos:</span>
                                            <span class="badge bg-success">@activeCount</span>
                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <span>Bloqueados:</span>
                                            <span class="badge bg-danger">@lockedCount</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="ti ti-users-off fs-1 text-muted mb-3 d-block"></i>
                            <p class="text-muted">No hay usuarios asignados a este rol</p>
                            <a href="@Url.Action("Index", "User", new { area = "Identity" })"
                                class="btn btn-success btn-sm">
                                <i class="ti ti-user-plus me-1"></i>Asignar Usuarios
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- Información adicional del Rol -->
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="ti ti-info-circle me-2"></i>Información del Rol
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-borderless mb-0">
                            <tbody>
                                <tr>
                                    <td class="fw-bold" width="200">Nombre del Rol:</td>
                                    <td>@Model.Name</td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Tipo:</td>
                                    <td>
                                        @if (Model.IsSystemRole)
                                        {
                                            <span>Rol del Sistema (Protegido)</span>
                                        }
                                        else
                                        {
                                            <span>Rol Personalizado</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Descripción:</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(Model.Description))
                                        {
                                            @Model.Description
                                        }
                                        else
                                        {
                                            <span class="text-muted fst-italic">Sin descripción</span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td class="fw-bold">Total de Usuarios:</td>
                                    <td>
                                        <span class="badge bg-success">@(Model.Users?.Count ?? 0)</span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Botones de acción -->
<div class="row my-3">
    <div class="col-12 text-center">
        <a asp-action="Index" class="btn btn-light">
            <i class="ti ti-arrow-left me-2"></i>Volver a la Lista
        </a>
    </div>
</div>