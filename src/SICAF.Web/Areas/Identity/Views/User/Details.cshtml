@model UserDto

@{
    ViewData["Title"] = "Detalles del Usuario";
}

@{
    var courseId = ViewBag.CourseId as Guid?;
    var returnUrl = ViewBag.ReturnUrl as string;
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb rounded">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home", new { area = "" })" class="text-success d-flex align-items-center">
                <i class="ti ti-home fs-4 mt-1"></i>
            </a>
        </li>
        @if (returnUrl == "profile")
        {
            <li class="breadcrumb-item text-success active" aria-current="page">Mi Perfil</li>
        }
        else if (courseId.HasValue)
        {
            <li class="breadcrumb-item">
                <a href="@Url.Action("Index", "Course", new { area = "Academic" })" class="text-success">Programas</a>
            </li>
            <li class="breadcrumb-item">
                <a href="@Url.Action("Details", "Course", new { area = "Academic", id = courseId.Value })"
                    class="text-success">Detalles del Programa</a>
            </li>
            <li class="breadcrumb-item text-success active" aria-current="page">Detalles del Estudiante</li>
        }
        else
        {
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "User")" class="text-success">Usuarios</a></li>
            <li class="breadcrumb-item text-success active" aria-current="page">Detalles</li>
        }
    </ol>
</nav>

<div class="">
    <div class="row">
        <!-- Tarjeta de Perfil -->
        <div class="col-lg-4 col-xlg-3 col-md-5">
            <div class="card">
                <div class="card-body">
                    <center class="mt-4">
                        @if (Model.PhotoData != null && Model.PhotoData.Length > 0)
                        {
                            <img src="@Model.PhotoBase64" alt="@Model.FullName" class="img-fluid rounded"
                                style="width: 100%; max-width: 80px; height: auto; aspect-ratio: 1/1; object-fit: cover;">
                        }
                        else
                        {
                            <div class="rounded-circle bg-success d-flex align-items-center justify-content-center mx-auto"
                                style="width: 100px; height: 100px;">
                                <span class="text-white fw-bold fs-6">
                                    @Model.Name.Substring(0, 1)@Model.LastName.Substring(0, 1)
                                </span>
                            </div>
                        }
                        <h4 class="card-title mt-3">
                            @(!string.IsNullOrEmpty(Model.Grade) ? Model.Grade + ". " : "")@Model.Name @Model.LastName
                        </h4>
                        @if (!string.IsNullOrEmpty(Model.AviationProfile?.FlightPosition))
                        {
                            <h6 class="card-subtitle mt-2">@Model.AviationProfile.FlightPosition</h6>
                        }
                        <h6 class="card-subtitle mt-2">Usuario: @Model.Username</h6>

                        <div class="mt-3">
                            @if (!Model.IsLockedOut)
                            {
                                <span class="badge bg-success">Usuario Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Usuario bloqueado</span>
                            }
                        </div>

                        <div class="mt-2">
                            @if (!string.IsNullOrEmpty(Model.Force))
                            {
                                <span class="badge bg-dark ms-1">@Model.Force</span>
                            }
                        </div>

                        <div class="row text-center justify-content-center mt-4">
                            <div class="col-6">
                                <span class="font-medium d-block">@Model.DocumentType</span>
                                <h6>@Model.IdentificationNumber</h6>
                            </div>
                            <div class="col-6">
                                <span class="font-medium d-block">Edad</span>
                                <h6>@Model.Age años</h6>
                            </div>
                        </div>
                    </center>
                </div>
                <div>
                    <hr class="my-0">
                </div>
                <div class="card-body">
                    <h6 class="text-muted text-center mb-3">Roles Asignados</h6>
                    <div class="text-center">
                        @if (Model.Roles != null && Model.Roles.Any())
                        {
                            @foreach (var role in Model.Roles.OrderBy(r => r.Name))
                            {
                                <span class="badge bg-success rounded-pill mb-2">@role.Name</span>
                            }
                        }
                        else
                        {
                            <span class="badge bg-secondary rounded-pill">Sin roles asignados</span>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Información Detallada -->
        <div class="col-lg-8 col-xlg-9 col-md-7">
            <!-- Información Personal -->
            <div class="card">
                <div class="card-header bg-success">
                    <h5 class="mb-0 text-white text-center">
                        <i class="fas fa-user me-2"></i>
                        Información Personal
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <tbody>
                                <tr>
                                    <td><strong>Tipo de Ala:</strong></td>
                                    <td>@(Model.AviationProfile?.WingType ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td><strong>PID:</strong></td>
                                    <td>@(Model.AviationProfile?.PID ?? "N/A")</td>
                                </tr>
                                <tr>
                                    <td><strong>Teléfono:</strong></td>
                                    <td>@Model.PhoneNumber</td>
                                </tr>
                                <tr>
                                    <td><strong>Correo Electronico:</strong></td>
                                    <td>@(Model.Email ?? "NO REGISTRADO")</td>
                                </tr>
                                <tr>
                                    <td><strong>Fecha de Nacimiento:</strong></td>
                                    <td>@Model.BirthDateString</td>
                                </tr>
                                <tr>
                                    <td><strong>Grado:</strong></td>
                                    <td>@(Model.Grade ?? "Civil")</td>
                                </tr>
                                <tr>
                                    <td><strong>Antiguedad:</strong></td>
                                    <td>@(Model.SeniorityOrder ?? 0)</td>
                                </tr>
                                <tr>
                                    <td><strong>Fuerza:</strong></td>
                                    <td>@(Model.Force ?? "N/A")</td>
                                </tr>

                                <tr>
                                    <td><strong>Nacionalidad:</strong></td>
                                    <td>@(Model.Nationality ?? "N/A")</td>
                                </tr>

                                <tr>
                                    <td><strong>Tipo de Sangre:</strong></td>
                                    <td>@(Model.BloodType ?? "N/A")</td>
                                </tr>

                                <tr>
                                    <td><strong>Estado:</strong></td>
                                    <td>@(Model.IsLockedOut ? "Bloqueado" : "Activo")</td>
                                </tr>

                                <tr>
                                    <td><strong>Motivo de Bloqueo:</strong></td>
                                    <td>@(Model.LockoutReason ?? "N/A")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>