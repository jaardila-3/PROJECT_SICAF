@model MachineFlightHoursDetailDto

<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0 text-white">
            <i class="ti ti-plane me-2"></i>Registros de Vuelo
        </h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="detailTable"
                class="datatablesAdvancedJQuery table table-striped table-bordered text-nowrap align-middle">
                <thead>
                    <tr>
                        <th class="text-center">No.</th>
                        <th>Estudiante</th>
                        <th>Misi√≥n/Fase</th>
                        <th class="text-center">Fecha</th>
                        <th>Instructor</th>
                        <th class="text-center">Horas de Vuelo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var record in Model.Records)
                    {
                        <tr>
                            <td class="text-center">@record.Number</td>
                            <td>@record.StudentName</td>
                            <td>@record.MissionPhaseName</td>
                            <td class="text-center">@record.FlightDate.ToString("dd/MM/yyyy")</td>
                            <td>@record.InstructorName</td>
                            <td class="text-center">@record.FlightHours.ToString("0.00")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr class="table-secondary fw-bold">
                        <td colspan="5" class="text-end">Total Horas:</td>
                        <td class="text-center">@Model.TotalHours.ToString("0.00")</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>