<!--  Header Start -->
<header class="topbar">
    <div class="with-vertical">
        <!-- ---------------------------------- -->
        <!-- Start Vertical Layout Header -->
        <!-- ---------------------------------- -->
        <nav class="navbar navbar-expand-lg p-0">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <ul class="navbar-nav">
                    <li class="nav-item nav-icon-hover-bg rounded-circle ms-n2">
                        <a class="nav-link sidebartoggler" id="headerCollapse" href="javascript:void(0)">
                            <i class="ti ti-menu-2"></i>
                        </a>
                    </li>
                </ul>
            }
            <ul class="navbar-nav quick-links d-none d-lg-flex align-items-center">

                @if (!User.Identity?.IsAuthenticated ?? false)
                {
                    <li class="nav-item dropdown-hover d-none d-lg-block">
                        <a class="nav-link" asp-area="Identity" asp-controller="Account" asp-action="Login">Iniciar
                            sesi√≥n</a>
                    </li>
                }
            </ul>

            <div class="d-block d-lg-none py-4">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-nowrap logo-img">
                    <img src="~/assets/images/logos/light-logo.svg" class="dark-logo" alt="Logo-Dark" />
                    <img src="~/assets/images/logos/light-logo.svg" class="light-logo" alt="Logo-light" />
                </a>
            </div>

            <a class="navbar-toggler nav-icon-hover-bg rounded-circle p-0 mx-0 border-0" href="javascript:void(0)"
                data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                aria-label="Toggle navigation">
                <i class="ti ti-dots fs-7"></i>
            </a>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">

                <div class="d-flex align-items-center justify-content-between">
                    <ul class="navbar-nav flex-row ms-auto align-items-center justify-content-center">

                        <li class="nav-item nav-icon-hover-bg rounded-circle">
                            <a class="nav-link moon dark-layout" href="javascript:void(0)">
                                <i class="ti ti-moon moon"></i>
                            </a>
                            <a class="nav-link sun light-layout" href="javascript:void(0)">
                                <i class="ti ti-sun sun"></i>
                            </a>
                        </li>

                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <!-- ------------------------------- -->
                            <!-- start profile Dropdown -->
                            @await Component.InvokeAsync("ProfileDropdown")
                            <!-- ------------------------------- -->
                        }
                    </ul>
                </div>


            </div>
        </nav>
        <!-- ---------------------------------- -->
        <!-- End Vertical Layout Header -->
        <!-- ---------------------------------- -->
    </div>

</header>
<!--  Header End -->